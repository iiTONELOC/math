{
    "compilerOptions": {
        "module": "ESNext",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "outDir": "./lib",
        "baseUrl": "./src",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "moduleResolution": "Node",
        "incremental": true,
        "declarationMap": true,
        "inlineSourceMap": true,
        "inlineSources": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}